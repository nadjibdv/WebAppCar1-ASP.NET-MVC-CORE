@model IEnumerable<WebAppCar1.Models.ViewModels.CarListViewModels>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"  class="btn btn-success" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.car_ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car_Plate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person_FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person_LName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person_Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {


<tr>
            <td>

                @if (item.car_ImageUrl != null) { 
                
                    <img src ="~/uploads/@item.car_ImageUrl"  style="width:80px" class="img-thumbnail" />
                
                }
  
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.car_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.car_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.car_Plate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.person_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.person_FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.person_LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.person_Phone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.car_ID  } , new { @class="btn btn-primary" }) 
                @Html.ActionLink("Details", "Details", new {  id=item.car_ID  } , new { @class = "btn btn-info" }) 
                @Html.ActionLink("Delete", "Delete", new {  id=item.car_ID  }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
